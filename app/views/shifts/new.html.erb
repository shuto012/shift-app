<%= month_calendar shifts: @shifts do |date, shifts| %>
  <%= date.day %>
<% end %>

<%= form_with(model: @shift, local: true) do |f| %>

  <div class="start-time">
    <%= f.label "出勤時間", class:"shift-label" %><br />
    <%= f.datetime_select :start_time, class:"shift-input" %>
  </div>

  <div class="finish-time">
    <%= f.label "退勤時間", class:"shift-label" %><br />
    <%= f.datetime_select :finish_time, class:"shift-input" %>
  </div>
  <div class="comment">
    <%= f.label "コメント", class:"shift-label" %><br />
    <%= f.text_field :comment, class:"comment-input"%>

  <div class="shift-submit">
    <%= f.submit "決　定", class:"shift-button" %>
  </div>

<% end %>